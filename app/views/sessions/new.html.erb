<h1>Log In</h1>

<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>

<%= form_tag('/login') do %>
  <%= label_tag :email %>
  <%= text_field_tag 'email' %>

  <%= label_tag :password %>
  <%= password_field_tag 'password' %>

  <%= submit_tag("Go!") %>
<% end %>

<%= link_to 'Back to Home', root_path %>
